<!-- ILS panel for Tu-134 3D instrument for Tu-134-->
<PropertyList>
  
  <path>psp.ac</path>
  
  <animation>
    <type>material</type>
    <object-name>Back</object-name>
    <object-name>k1</object-name>
    <object-name>g1</object-name>
    <object-name>k2</object-name>
    <object-name>sw_1</object-name>
    <object-name>g2</object-name>
    <object-name>sw_2</object-name>
    <object-name>sw_3</object-name>
    <emission>
      <factor-prop>Tu-134/instrument-lights</factor-prop>
      <red>   1.0 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>
  
  <!--Tablo staff-->
  <animation>
    <type>select</type>
    <object-name>k1_lamp</object-name>
    <condition>
      <property>/controls/instrumental/k1_lamp</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>k1_lamp</object-name>
    <condition>
      <property>/controls/instrumental/k1_lamp</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/k1_lamp</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>k2_lamp</object-name>
    <condition>
      <property>/controls/instrumental/k2_lamp</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>k2_lamp</object-name>
    <condition>
      <property>/controls/instrumental/k2_lamp</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/k2_lamp</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>g1_lamp</object-name>
    <condition>
      <property>/controls/instrumental/g1_lamp</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>g1_lamp</object-name>
    <condition>
      <property>/controls/instrumental/g1_lamp</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/g1_lamp</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>g2_lamp</object-name>
    <condition>
      <property>/controls/instrumental/g2_lamp</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>g2_lamp</object-name>
    <condition>
      <property>/controls/instrumental/g2_lamp</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/g2_lamp</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
</PropertyList>
