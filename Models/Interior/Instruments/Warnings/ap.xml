<!-- Autopilot tablo for Tu-134 3D instrument for Tu-134-->
<PropertyList>
  <path>ap.ac</path>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>Ap_bok</object-name>
    <object-name>Ap_prod</object-name>
    <object-name>Kurs</object-name>
    <object-name>Gliss</object-name>
    <object-name>Zk</object-name>
    <object-name>At</object-name>
    <object-name>Vor</object-name>
    <object-name>Kv</object-name>
    <object-name>Anu</object-name>
    <emission>
      <factor-prop>Tu-134/instrument-lights</factor-prop>
      <red>   1.0 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <!--Tablo staff-->
  <animation>
    <type>select</type>
    <object-name>Ap_prod</object-name>
    <condition>
      <property>/controls/instrumental/ap_prod</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Ap_prod</object-name>
    <condition>
      <property>/controls/instrumental/ap_prod</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/ap_prod</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Ap_bok</object-name>
    <condition>
      <property>/controls/instrumental/ap_bok</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Ap_bok</object-name>
    <condition>
      <property>/controls/instrumental/ap_bok</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/ap_bok</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Kurs</object-name>
    <condition>
      <property>/controls/instrumental/kurs</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Kurs</object-name>
    <condition>
      <property>/controls/instrumental/kurs</property>
    </condition>
    <emission>
      <factor-prop>/controls/kurs</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Gliss</object-name>
    <condition>
      <property>/controls/instrumental/gliss</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Gliss</object-name>
    <condition>
      <property>/controls/instrumental/gliss</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/gliss</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Zk</object-name>
    <condition>
      <and>
        <equals>
          <property>/sim/gui/dialogs/autopilot/roll-status</property>
          <value>2</value>
        </equals>
        <equals>
          <property>/sim/gui/dialogs/autopilot/act-heading-mode</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Zk</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>At</object-name>
    <condition>
      <property>/sim/gui/dialogs/autopilot/power-at</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>At</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Vor</object-name>
    <condition>
      <and>
        <equals>
          <property>/sim/gui/dialogs/autopilot/roll-status</property>
          <value>2</value>
        </equals>
        <equals>
          <property>/sim/gui/dialogs/autopilot/act-heading-mode</property>
          <value>2</value>
        </equals>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Vor</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Kv</object-name>
    <condition>
      <property>/controls/instrumental/kv</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Kv</object-name>
    <condition>
      <and>
        <equals>
          <property>/sim/gui/dialogs/autopilot/roll-status</property>
          <value>2</value>
        </equals>
        <equals>
          <property>/sim/gui/dialogs/autopilot/act-heading-mode</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/kv</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Anu</object-name>
    <condition>
      <property>/controls/instrumental/anu</property>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Anu</object-name>
    <condition>
      <property>/controls/instrumental/anu</property>
    </condition>
    <emission>
      <factor-prop>/controls/instrumental/anu</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>
  
</PropertyList>
